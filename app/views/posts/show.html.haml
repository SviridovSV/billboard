%div{:id => "image"}
  %strong Image:
  %br
  = post_image_for_show_page
  %br
%strong Text:
%br
%div
  = safe_textilize(@post.text)
%br
- if can? :manage, @post
  %div{:id => "buttons"}
    = link_to 'Edit', edit_post_path(@post)
    |
    = link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Really delete the post?"}
%br
%div{:id => "comments"}
  = render partial: 'posts/comment', collection: @post.comments.reverse
%div{:id => "new-comments"}
  = render partial: 'comments/form', locals: { post: @post }
