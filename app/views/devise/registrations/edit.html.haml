.row
  .col-sm-6
    %h2
      Edit #{resource_name.to_s.humanize}
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      .field
        = f.label :login
        %br/
        = f.text_field :login, autofocus: true, autocomplete: "login"
      .field
        = f.label :first_name
        %br/
        = f.text_field :first_name, autocomplete: "first name"
      .field
        = f.label :last_name
        %br/
        = f.text_field :last_name, autocomplete: "last name"
      .field
        = f.label :birthday
        %br/
        = f.date_field :birthday
      .field
        = f.label :address
        %br/
        = f.text_field :address, autocomplete: "address"
      .field
        = f.label :city
        %br/
        = f.text_field :city, autocomplete: "city"
      .field
        = f.label :state
        %br/
        = f.text_field :state, autocomplete: "state"
      .field
        = f.label :country
        %br/
        = f.text_field :country, autocomplete: "country"
      .field
        = f.label :zip
        %br/
        = f.text_field :zip, autocomplete: "zip"
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .field
        = f.label :password
        %i (leave blank if you don't want to change it)
        %br/
        = f.password_field :password, autocomplete: "off"
        - if @minimum_password_length
          %br/
          %em
            = @minimum_password_length
            characters minimum
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off"
      .field
        = f.label :current_password
        %i (we need your current password to confirm your changes)
        %br/
        = f.password_field :current_password, autocomplete: "off"
      .actions
        = f.submit "Update"
    %h3 Cancel my account
    %p
      Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
    = link_to "Back", :back
  .col-sm-6
    %iframe{:allowfullscreen => "", :frameborder => "0", :height => "640", :src => "https://www.google.com/maps/embed/v1/place?key=#{ENV['GOOGLE']}&q=#{coordinates(current_user)}", :style => "border:0", :width => "640"}
