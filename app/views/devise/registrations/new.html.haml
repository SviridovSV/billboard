%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :login
    %br/
    = f.text_field :login, autofocus: true, autocomplete: "login"
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name, autocomplete: "first name"
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name, autocomplete: "last name"
  .field
    = f.label :birthday
    %br/
    = f.date_field :birthday
  .field
    = f.label :address
    %br/
    = f.text_field :address, autocomplete: "address"
  .field
    = f.label :city
    %br/
    = f.text_field :city, autocomplete: "city"
  .field
    = f.label :state
    %br/
    = f.text_field :state, autocomplete: "state"
  .field
    = f.label :country
    %br/
    = f.text_field :country, autocomplete: "country"
  .field
    = f.label :zip
    %br/
    = f.text_field :zip, autocomplete: "zip"
  .field
    = f.label :email
    %br/
    = f.email_field :email, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "off"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
