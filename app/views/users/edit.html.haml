= form_for(@user) do |f|
  %ul
    - @user.errors.full_messages.each do |error|
      %li= error
  .form-group
    .field
      = f.label :login
      %br/
      = f.text_field :login, autofocus: true, autocomplete: "login"
    .field
      = f.label :first_name
      %br/
      = f.text_field :first_name, autocomplete: "first name"
    .field
      = f.label :last_name
      %br/
      = f.text_field :last_name, autocomplete: "last name"
    .field
      = f.label :birthday
      %br/
      = f.date_field :birthday
    .field
      = f.label :address
      %br/
      = f.text_field :address, autocomplete: "address"
    .field
      = f.label :city
      %br/
      = f.text_field :city, autocomplete: "city"
    .field
      = f.label :state
      %br/
      = f.text_field :state, autocomplete: "state"
    .field
      = f.label :country
      %br/
      = f.text_field :country, autocomplete: "country"
    .field
      = f.label :zip
      %br/
      = f.text_field :zip, autocomplete: "zip"
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .field
      = f.label :role
      %br/
      = f.text_field :role
    .actions
      = f.submit "Update"