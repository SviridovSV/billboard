= form_for(@post) do |f|
  %ul
    - @post.errors.full_messages.each do |error|
      %li= error
  .form-group
    = f.label :text, for: "inputText"
    = f.text_field :text, id: :inputText, placeholder: "Text of post", class: "form-control"
    = f.label :image
    = f.file_field :image

  = f.hidden_field :user_id, value: current_user.id
  = f.submit "Create", class: "btn btn-primary"